config {
    type: "incremental",
    tags: ["high-frequency"]
}

pre_operations {
    TRUNCATE TABLE ${self()};
}

WITH playbooks AS (
  SELECT
    agent_id,
    playbook_id,
    playbook_name,
    runtime,
    LAG(playbook_name) OVER (PARTITION BY agent_id, playbook_id ORDER BY runtime) AS prev_playbook_name,
    LAG(runtime) OVER (PARTITION BY agent_id, playbook_id ORDER BY runtime) AS prev_runtime
  FROM agent_structure.playbooks
),
filtered AS (
  SELECT
    agent_id,
    playbook_id,
    playbook_name,
    runtime as valid_from
  FROM playbooks
  WHERE prev_playbook_name IS NULL OR playbook_name != prev_playbook_name
),
with_end_date AS (
  SELECT
    agent_id,
    playbook_id,
    playbook_name,
    valid_from,
    LEAD(valid_from) OVER (PARTITION BY agent_id, playbook_id ORDER BY valid_from) AS next_start_date,
    ROW_NUMBER() OVER (PARTITION BY agent_id, playbook_id ORDER BY valid_from) as incremental_order
  FROM filtered
)
SELECT
  playbook_id,
  playbook_name,
  IF(incremental_order = 1, TIMESTAMP('2000-01-01'), valid_from) as valid_from,
  IF(next_start_date IS NULL, TIMESTAMP('2050-01-01'), TIMESTAMP_SUB(next_start_date, INTERVAL 1 SECOND)) AS valid_to,
  agent_id,
FROM with_end_date